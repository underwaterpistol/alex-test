{% render 'collection-slider', section: section %}

  {% schema %}
    {
      "name": "Collection Slider",
      "class": "collection_slider",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section title",
          "default": "Shop by range"
        },
        {
            "type": "range",
            "id": "margin_top",
            "min": 0,
            "max": 10,
            "step": 1,
            "unit": "rem",
            "label": "Margin Top",
            "default": 0
        },
        {
            "type": "range",
            "id": "margin_bottom",
            "min": 0,
            "max": 10,
            "step": 1,
            "unit": "rem",
            "label": "Margin Bottom",
            "default": 2
        }
      ],
      "blocks":[
        {
          "type": "collection",
          "name": "Collection",
          "settings":[
            {
              "type": "color",
              "id": "background_color",
              "label": "Background Color",
              "default": "#D2EAF9"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description"
            },
            {
              "type": "url",
              "id": "url",
              "label": "Collection link"
            }
          ]
        }
      ],    
      "presets": [
        {
          "name": "Collection Slider"
        }
      ]
    }
  {% endschema %}
  