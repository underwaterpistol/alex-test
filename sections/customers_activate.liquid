<div class="activate">
  <div class="activate__container">  

    <h1 class="activate__title">{{ "customer.activate.title" | t }}</h1>

    {% form 'activate_customer_password', class: "activate__form" %}

      <div class="activate__form__input-wrapper">
        <label for="password" class="activate__label">{{ "forms.password" | t }}</label>
        <input
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
        >
      </div>

      <div class="activate__vorm__input-wrapper">
        <label for="password_confirmation" class="activate__label">{{ "forms.confirm_password" | t }}</label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          autocomplete="new-password"
        >
      </div>

      <button type="submit" class="activate__form__submit-button">{{ "customer.activate.submit_button" | t }}</button>

    {% endform %}
  </div>
</div>