<style>
  /* General */
  body {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.4rem;
    line-height: 1.42857143;
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
  }
  .splash {
    background-color: #000000;
    background-image: linear-gradient(315deg, #4a5153 0%, #000000 74%);
    height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  /* Logo and text */
  .splash__logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .splash__logo {
    width: 125px;
    height: auto;
  }
  @media (max-width: 768px) {
    .splash__logo {
      width: 50%;
    }
  }
  .splash__content {
    text-align: center;
  }
  .splash__content > * {
    color: inherit;
  }

  /* Dev link */
  .splash__dev-container {
    position: fixed;
    top: 0;
    right: 0;
    background-color: #000000;
    padding: 2px;
    opacity: 0.5;
    transition: opacity 200ms ease;
  }
  .splash__dev-container:hover {
    opacity: 1;
  }
  .splash__dev-link {
    color: #ffffff;
    text-decoration: none;
    cursor: pointer;
    font-size: .9rem;
  }

  /* Password link */
  .splash__password-link {
    position: fixed;
    top: 0;
    left: 0;
    padding: 2px;
    margin: 0;
    font-size: 1rem;
    opacity: 0.5;
    transition: opacity 200ms ease;
    color: white;
  }
  .splash__password-link > * {
    color: inherit;
  }
  .splash__password-link:hover {
    opacity: 1;
  }

  /* Password form */
  .splash__password-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.4);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 100;
    transition: opacity 200ms ease;
  }
  .splash__password-modal-container {
    position: relative;
    width: 300px;
    height: auto;
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    transition: opacity 200ms ease;
  }
  .splash__password-modal-header {
    padding: 10px;
    border-bottom: 1px solid #cccccc;
  }
  .splash__password-modal-title {
    font-size: 1.8rem;
    font-weight: bold;
  }
  .splash__password-modal-close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 2.0rem;
    font-weight: bold;
    color: #000000;
    cursor: pointer;
    background: none;
    border: none;
  }
  .splash__password-modal-body {
    padding: 10px;
  }
  .splash__password-modal-form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .splash__password-modal-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #cccccc;
    border-radius: 5px;
    margin-bottom: 10px;
  }
  .splash__password-modal-submit {
    width: 100%;
    padding: 10px;
    border: 1px solid #cccccc;
    border-radius: 5px;
    background-color: #ffffff;
    color: #000000;
    cursor: pointer;
  }
  .splash__password-modal-submit:hover {
    background-color: #000000;
    color: #ffffff;
  }
</style>

<script>
  // Sets the colour of the logo and the text based on the background colour of splash
  (function() {

    // Get splash brightness
    const backgroundColour = window.getComputedStyle(document.querySelector(".splash")).getPropertyValue("background-color");
    const rgba = backgroundColour.match(/\d+/g).map(Number);
    const brightness = Math.round(0.299 * rgba[0] + 0.587 * rgba[1] + 0.114 * rgba[2]);

    // Set logo colour
    const logo = document.querySelector(".splash__logo");
    if (brightness < 128) {
      logo.style.fill = "white";
    } else {
      logo.style.fill = "black";
    }

    // Set text colour
    const text = document.querySelectorAll(".splash__content");
    if (brightness < 128) {
      text.forEach(function(element) {
        element.style.color = "white";
      });
    } else {
      text.forEach(function(element) {
        element.style.color = "black";
      });
    }

  })();

  // Opens the password form
  function openPasswordForm() {
    document.querySelector(".splash__password-modal").style.display = "flex";
  }

  // Closes the password form
  function closePasswordForm() {
    document.querySelector(".splash__password-modal").style.display = "none";
  }
</script>