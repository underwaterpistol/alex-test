<div class="accordion">
    <div class="accordion__item">
      <input type="radio" name="accordion" class="accordion__item__trigger" hidden id="accordionItem-1">
      <label for="accordionItem-1" class="accordion__item__title">
        <span>{{ title1 }}</span>
        <span class="accordion__item__dropdown-arrow">
          {% render "icons", icon: "chevron-down", class_name: "accordion__item__dropdown-arrow" %}
        </span>
      </label>
      <div class="accordion__item__content">{{ content1 }}</div>
    </div>
    <div class="accordion__item">
      <input type="radio" name="accordion" class="accordion__item__trigger" hidden id="accordionItem-2">
